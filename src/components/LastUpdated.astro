---
interface Props {
  date: Date;
  locale?: string;
  label?: string;
  className?: string;
}

const { date, locale = 'en-US', label = 'Last updated', className = '' } = Astro.props;

const formattedDate = date.toLocaleDateString(locale, {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<div class={`flex items-center gap-2 text-sm text-muted-foreground ${className}`} data-testid="last-updated">
  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
  </svg>
  <time datetime={date.toISOString()}>
    {label}: {formattedDate}
  </time>
</div>

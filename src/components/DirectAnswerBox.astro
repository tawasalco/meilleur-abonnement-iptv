---
interface Props {
  question: string;
  answer: string;
  className?: string;
}

const { question, answer, className = '' } = Astro.props;
---

<div 
  class={`bg-primary/5 border border-primary/20 rounded-lg p-6 mb-8 ${className}`}
  data-testid="direct-answer-box"
  role="region"
  aria-label="Quick Answer"
>
  <h2 class="text-xl font-bold mb-3 flex items-center gap-2" data-speakable="true">
    <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    {question}
  </h2>
  <p class="text-muted-foreground leading-relaxed" data-speakable="true">
    {answer}
  </p>
</div>

<style>
  [data-speakable="true"] {
    speak: auto;
  }
</style>

---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import SEO from '../components/SEO.astro';

const serviceInfoEntries = await getCollection('service-info');
const serviceInfo = serviceInfoEntries[0];
const data = serviceInfo?.data || {};
const baseUrl = data.siteUrl || Astro.url.origin;

const contactInfo = data.contactInfo || {};
const whatsappNumber = contactInfo.whatsappNumber || '212641520118';
const telegramUsername = contactInfo.telegramUsername || '+212641520118';
const supportEmail = contactInfo.supportEmail || data.supportEmail || 'streamonlinever@gmail.com';

const whatsappLink = `https://web.whatsapp.com/send?phone=${whatsappNumber.replace(/\D/g, '')}&text=Hi, I just made a purchase and need my account login details.`;

const telegramLink = `https://telegram.me/${telegramUsername.replace('@', '')}`;

const emailLink = `mailto:${supportEmail}?subject=Account Login Request&body=Hi, I just made a purchase and need my account login details.%0A%0AOrder details:%0A`;
---

<BaseLayout>
  <SEO
    slot="head"
    title={`Thank You - ${data.brandName}`}
    description="Thank you for your purchase! Contact us to receive your account login details."
    canonicalURL={`${baseUrl}/thank-you`}
    noindex={true}
  />

  <section class="min-h-[80vh] flex items-center justify-center py-20">
    <div class="container mx-auto px-4 max-w-2xl text-center">
      <div 
        class="w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-6"
        style={{ backgroundColor: `${data.primaryColor || '#3B82F6'}20` }}
      >
        <svg 
          class="w-10 h-10" 
          fill="none" 
          stroke={data.primaryColor || '#3B82F6'} 
          viewBox="0 0 24 24"
        >
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M5 13l4 4L19 7" 
          />
        </svg>
      </div>

      <h1 class="text-4xl font-bold mb-4">Thank You for Your Purchase!</h1>
      
      <p class="text-xl text-muted-foreground mb-8">
        Your order has been received. Please contact us using one of the methods below to receive your account login details.
      </p>

      <div class="grid gap-4 max-w-md mx-auto">
        <a
          href={whatsappLink}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center justify-center gap-3 w-full rounded-lg py-4 px-6 font-semibold text-white transition-all hover:opacity-90"
          style={{ backgroundColor: '#25D366' }}
          data-testid="link-whatsapp-contact"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          Contact on WhatsApp
        </a>

        <a
          href={telegramLink}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center justify-center gap-3 w-full rounded-lg py-4 px-6 font-semibold text-white transition-all hover:opacity-90"
          style={{ backgroundColor: '#0088cc' }}
          data-testid="link-telegram-contact"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
          </svg>
          Contact on Telegram
        </a>

        <a
          href={emailLink}
          class="flex items-center justify-center gap-3 w-full rounded-lg py-4 px-6 font-semibold transition-all hover:opacity-90 border-2"
          style={{ 
            borderColor: data.primaryColor || '#3B82F6',
            color: data.primaryColor || '#3B82F6'
          }}
          data-testid="link-email-contact"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          Contact via Email
        </a>
      </div>

      <div class="mt-12 p-6 rounded-lg bg-muted/30">
        <h2 class="text-lg font-semibold mb-2">What happens next?</h2>
        <ol class="text-left text-muted-foreground space-y-2 max-w-sm mx-auto">
          <li class="flex items-start gap-2">
            <span class="font-bold" style={{ color: data.primaryColor || '#3B82F6' }}>1.</span>
            <span>Contact us using any method above</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="font-bold" style={{ color: data.primaryColor || '#3B82F6' }}>2.</span>
            <span>Provide your order/payment confirmation</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="font-bold" style={{ color: data.primaryColor || '#3B82F6' }}>3.</span>
            <span>Receive your login details within minutes</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="font-bold" style={{ color: data.primaryColor || '#3B82F6' }}>4.</span>
            <span>Start streaming immediately!</span>
          </li>
        </ol>
      </div>

      <p class="mt-8 text-sm text-muted-foreground">
        Questions? Our support team is available 24/7 to assist you.
      </p>

      <a
        href="/"
        class="inline-flex items-center gap-2 mt-6 text-sm hover:underline"
        style={{ color: data.primaryColor || '#3B82F6' }}
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Return to Homepage
      </a>
    </div>
  </section>
</BaseLayout>

---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import SEO from '../../components/SEO.astro';
import { generateBreadcrumbSchema } from '../../utils/schema';
import { LANGUAGES, getUITranslations, defaultLanguage, type LanguageCode } from '../../utils/i18n';

export const prerender = true;

export async function getStaticPaths() {
  const langs = Object.keys(LANGUAGES).filter(lang => lang !== defaultLanguage);
  return langs.map(lang => ({
    params: { lang },
  }));
}

const { lang } = Astro.params;
const currentLang = (lang || defaultLanguage) as LanguageCode;
const t = getUITranslations(currentLang);

const [serviceInfoEntries, siteConfigEntries] = await Promise.all([
  getCollection('service-info'),
  getCollection('site-config').catch(() => []),
]);

const serviceInfo = serviceInfoEntries[0];
const siteConfig = siteConfigEntries[0]?.data || {};
const data = serviceInfo?.data || {};
const baseUrl = data.siteUrl || Astro.url.origin;
const supportEmail = data.supportEmail || 'streamonlinever@gmail.com';
const guaranteeDays = siteConfig.guaranteeDays || 7;

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: t.nav.home || 'Home', url: baseUrl },
  { name: t.footer?.refundPolicy || 'Refund Policy', url: `${baseUrl}/${currentLang}/refund-policy` },
]);
---

<BaseLayout currentLang={currentLang}>
  <SEO
    slot="head"
    title={`${t.footer?.refundPolicy || 'Refund Policy'} - ${data.brandName}`}
    description={`Refund policy for ${data.brandName}. ${guaranteeDays}-day money-back guarantee.`}
    canonicalURL={`${baseUrl}/${currentLang}/refund-policy`}
    schema={[breadcrumbSchema]}
    languages={Object.fromEntries(
      Object.keys(LANGUAGES)
        .filter(l => l !== currentLang)
        .map(l => [l, l === defaultLanguage ? `${baseUrl}/refund-policy` : `${baseUrl}/${l}/refund-policy`])
    )}
  />

  <section class="py-20 bg-gradient-to-b from-background to-muted/30">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        {t.footer?.refundPolicy || 'Refund Policy'}
      </h1>
      <p class="text-muted-foreground">
        {t.legal?.lastUpdated || 'Last updated'}: {new Date().toLocaleDateString()}
      </p>
    </div>
  </section>

  <section class="py-16">
    <div class="container mx-auto px-4 max-w-4xl prose dark:prose-invert">
      <h2>{t.legal?.moneyBackGuarantee || 'Money-Back Guarantee'}</h2>
      <p>{(t.legal?.moneyBackGuaranteeDesc || 'We offer a {days}-day money-back guarantee on all subscriptions.').replace('{days}', String(guaranteeDays))}</p>
      
      <h2>{t.legal?.refundEligibility || 'Refund Eligibility'}</h2>
      <p>{t.legal?.refundEligibilityDesc || 'To be eligible for a refund, you must request it within the guarantee period and provide a valid reason for dissatisfaction.'}</p>
      
      <h2>{t.legal?.howToRequest || 'How to Request a Refund'}</h2>
      <p>{t.legal?.howToRequestDesc || 'Contact our support team via WhatsApp, Telegram, or email to request a refund. We aim to process all refund requests within 24-48 hours.'}</p>
      
      <h2>{t.legal?.contactUs || 'Contact Us'}</h2>
      <p>{t.legal?.contactUsDesc || 'For refund requests, please contact us at'}: <a href={`mailto:${supportEmail}`}>{supportEmail}</a></p>
    </div>
  </section>
</BaseLayout>
